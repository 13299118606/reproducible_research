from rsf.proj import *
import math
from rsf.prog import RSFROOT
import sys
# sys.path.append('../barrolka/')
# import velcon3d

proj = Project()
prog = proj.Program('rtm3d.c')
prog2 = proj.Program('rtm3d2.c')

def Grey(data,other):
    Result(data,'''
    window |grey
    label1=Time unit1=s color=g label2=Distance unit2=km clip=0.3 wanttitle=n title= screenratio=1.0 
    %s ''' % (other))

def Grey3(data,clip,other):
    Result(data,'''
    window |byte clip=%g| grey3 flat=n frame1=100 frame2=20 frame3=20
    label1=Time unit1=s color=g label2=Inline unit2=km label3=Crossline unit3=km clip=0.3 wanttitle=y title= screenratio=1.0 point1=0.7 point2=0.6 label
    %s ''' % (clip,other))
 
def Greyi(data,clip,other):
    Result(data,'''
    threshold2 pclip=2|window |byte clip=%g | grey3 flat=n frame1=50 frame2=50 frame3=50
    label1=Time unit1=s color=g label2=Distance unit2=km clip=0.3 wanttitle=n title= screenratio=1.0 
    %s ''' % (clip,other))
    
def Greyii(data,datain,clip,other):
    Result(data,datain,'''
    threshold2 pclip=2|window |byte clip=%g | grey3 flat=n frame1=50 frame2=50 frame3=50
    label1=Time unit1=s color=g label2=Distance unit2=km clip=0.3 wanttitle=n title= screenratio=1.0 
    %s ''' % (clip,other))
    
## plot one image from the image sets
def Greyis(data,datain,i2,clip,other):
    Result(data,datain,'''
    threshold2 pclip=2|window n2=1 f2=%d|byte clip=%g | grey3 flat=n frame1=50 frame2=50 frame3=50
    label1=Time unit1=s color=g label2=Distance unit2=km clip=0.3 wanttitle=n title= screenratio=1.0 
    %s ''' % (i2,clip,other))
       
def Grey4(data,other):
    Result(data,'''
    window |byte clip=10| window max1=1.0| grey3 flat=n frame1=100 frame2=100 frame3=100
    label1=Time unit1=s color=g label2=Distance unit2=km clip=0.3 wanttitle=n title= screenratio=1.0 
    %s ''' % (other))

def Greyv(data,other):
    Result(data,'''
    window |byte allpos=y bias=1.0 clip=1.2 bar=bar.rsf| grey3 flat=n frame1=20 frame2=20 frame3=20
    label1=Time unit1=s color=g label2=Distance unit2=km clip=0.3 wanttitle=n title= screenratio=1.0 
    scalebar=y %s ''' % (other))
     
## The simplest 3D
Flow('r2',None,'spike n1=101 n2=101 n3=101 d1=0.01 d2=0.01 d3=0.01 o1=0 o2=0 o3=0| window n1=1 | math output=0.15')
Flow('a2','r2','math output=100|cut n1=50 | cut f1=51|cut n2=50 | cut f2=51')
# Flow('a2','r2','math output=100|cut n1=10 | cut f1=11|cut n2=10 | cut f2=11')

Flow('diffr2','r2 a2',
     '''
     	 kirmod3 nt=400 dt=0.002 freq=20 refl=${SOURCES[1]}
         nhx=1 h0x=0 dhx=0.05
         nhy=1 h0y=0 dhy=0.05 
         s0x=0 dsx=0.01 nsx=101 
         s0y=0 dsy=0.01 nsy=101 
         vel=2 gradz=1 type=v verb=n
     ''')
Grey3('diffr2',1,'')

Flow('diffr','diffr2','window|window n2=100 n3=100 n1=400')


## The more complicated 3D
#r3,a3: reflectors in 3D
Flow('r3',None,'spike n1=201 n2=201 n3=201 d1=0.01 d2=0.01 d3=0.01 o1=0 o2=0 o3=0| window n1=5 j1=10| math output="(0.5*x2+0.5*x3)*x1 + 0.2" | transp plane=12 | transp plane=23')
Result('r3-0','r3','window n3=1 f3=0|grey color=j title="First reflector" scalebar=y')
Result('r3-1','r3','window n3=1 f3=1|grey color=j title="First reflector" scalebar=y')
Result('r3-2','r3','window n3=1 f3=2|grey color=j title="Second reflector" scalebar=y')

Flow('a3','r3','math output=100|math output="input*(1-(x1-1)*(x1-1))*(1-(x2-1)*(x2-1))"')
Result('a3-0','a3','window n3=1 f3=0|grey pclip=100 title="First layer of diffractors" scalebar=y')
Result('a3-1','a3','window n3=1 f3=1|grey pclip=100 title="First layer of diffractors" scalebar=y')

## the following works
Flow('diffr3','r3 a3',
     '''
     	 kirmod3 nt=500 dt=0.004 freq=20 refl=${SOURCES[1]}
         nhx=1 h0x=0 dhx=0.05
         nhy=1 h0y=0 dhy=0.05 
         s0x=0 dsx=0.01 nsx=201 
         s0y=0 dsy=0.01 nsy=201 
         vel=2 gradz=1 type=v verb=n
     ''')


Flow('refl','diffr3','window|window j2=2 j3=2 | window n1=400|math output="input*0.4" | window n2=100 n3=100 n1=400')
Grey3('refl',1,'')
Grey3('diffr',1,'')

Flow('syn3d','diffr refl','add scale=1,1 ${SOURCES[1]}')
Grey3('syn3d',1,'')
     
