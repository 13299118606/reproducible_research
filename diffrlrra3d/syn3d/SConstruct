Flow('s-pwd','syn3d2 slope',
     '''
     pwspray2 ns2=%d ns3=%d dip=${SOURCES[1]} order=2 verb=y eps=0.1|
     stack axis=2
     '''% (ns2,ns3))
Flow('s-pwd-nn','syn3d2 s-pwd','add scale=1,-1 ${SOURCES[1]}')
Flow('s-pwd-n','s-pwd-nn','cp')
